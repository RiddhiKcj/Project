<div class="container-fluid">
    <h3 class="display-4"><center>Weather</center></h3>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <!-- carousel-1 -->
        <div class="carousel-inner">
            <div class="carousel-item active">
            <div class="jumbotron">
            <h3 style="color:#212121;"><%= @address %></h3>
                <% @weatherData.each do |key,val| %>
                    <% if key == "currently" %>
                        <span style="float:right; margin-right:40px;"><h4 style="color:#212121;"><%= val["temperature"] %> &#730;F</h4>
                        <h6 style="color:#424242;">Feels like &nbsp;<%= val["apparentTemperature"] %> &#730;F</h6></span>
                        <h6 style="color:#424242;"><%= Time.at(val["time"]).to_datetime.strftime("%A, %d %b  %T %p") %></h6><br />
                        <span><%= image_tag((val["icon"]+".svg"), :alt => "...", :class => "weather-img") %></span>
                        <h5 style="color:#424242;"><b><%= val["summary"] %></b></h5>
                        <br />                        
                        <div class="card" style="width: 18rem;">
                            <%= image_tag("drop.svg", :alt => "...", :class => "card-img-top") %>
                            <div class="card-body">
                                <ul class="list-group"><h6 style="color:#616161"><center>Precipitation</center></h6>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Probability<span class="badge badge-secondary badge-pill"><%= val["precipProbability"] %>%</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Intensity<span class="badge badge-secondary badge-pill"><%= val["precipIntensity"] %>%</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        
                        <div class="card" style="width: 18rem;">
                            <%= image_tag("winds.svg", :alt => "...", :class => "card-img-top") %>
                            <div class="card-body">
                                <ul class="list-group"><h6 style="color:#616161"><center>Wind</center></h6>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Speed<span class="badge badge-secondary badge-pill"><%= val["windSpeed"] %>mph</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Bearing<span class="badge badge-secondary badge-pill"><%= val["windBearing"] %>mph</span>
                                    </li>
                                </ul>
                            </div>
                        </div>


                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                            <ul class="list-group ">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                Pressure<span class="badge badge-secondary badge-pill"><%= val["pressure"] %> mbars</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                Humidity<span class="badge badge-secondary badge-pill"><%= val["humidity"] %></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                Visibility<span class="badge badge-secondary badge-pill"><%= val["visibility"] %></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                DewPoint<span class="badge badge-secondary badge-pill"><%= val["dewPoint"] %></span>
                                </li>
                            </ul>
                            </div>
                        </div>

                    <% end %>
                <% end %>
                </div>
            </div>
            
            <!-- carousel-2 -->
            <div class="carousel-item">
            <div class="jumbotron">
            <h3 style="color:#212121;"><center>Hourly Report</center></h3>
                <ul>
                <% @weatherData.each do |key,val| %>
                    <% if key == "hourly" %>
                        <span><%= image_tag((val["icon"]+".svg"), :alt => "...", :class => "weather-img") %></span>
                        <h5 style="color:#212121;"><strong><%= val["summary"] %></strong></h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Time</th>
                                    <th scope="col">Weather</th>
                                    <th scope="col">Summary</th>
                                    <th scope="col">Precipitation</th>
                                    <th scope="col">Temperature</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%= val["data"].each_with_index do |obj,index| %>
                                    <tr>
                                        <td scope="row"><%= Time.at(obj["time"]).to_datetime.strftime("%l:%M %p") %></td>
                                        <td ><%= image_tag((obj["icon"]+".svg"), :alt => "...", :class => "row-img") %></td>
                                        <td><b><%= obj["summary"] %></b></td>
                                        <td><%= obj["precipProbability"] %> % </td>
                                        <td><%= obj["temperature"] %> &#730;F</td>
                                    </tr>
                                    <% if index == 8 %>
                                        <% break %>
                                    <% end %>
                                <% end %>
                            </tbody>
                        </table>
                    <% end %>
                <% end %>
                </ul>
                </div>
            </div>


            <!-- carousel-3 -->
            <div class="carousel-item">
            <div class="jumbotron">
            <h3 style="color:#212121;"><center>Daily Report</center></h3>
                <% @weatherData.each do |key,val| %>
                    <% if key == "daily" %>
                        <span><%= image_tag((val["icon"]+".svg"), :alt => "...", :class => "weather-img") %></span>
                        <h5 style="color:#212121;"><strong><%= val["summary"] %></strong></h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Day</th>                                   
                                    <th scope="col">Weather</th>
                                    <th scope="col">Summary</th>
                                    <th scope="col">Precipitation</th>
                                    <th scope="col">Temperature</th>
                                    <th scope="col">Sunrise</th>
                                    <th scope="col">Sunset</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% val["data"].each_with_index do |obj,index| %>
                                    <tr>
                                        <td scope="row"><%= Time.at(obj["time"]).to_datetime.strftime("%a,%d %b") %></td>
                                        <td ><%= image_tag((obj["icon"]+".svg"), :alt => "...", :class => "row-img") %></td>
                                        <td><%= obj["summary"]%></td>
                                        <td><%= obj["precipProbability"] %>%</td>
                                        <td><%= obj["temperatureHigh"] %>&#730;F ~ <%= obj["temperatureLow"] %>&#730;F</td>
                                        <td><%=Time.at(obj["sunriseTime"]).to_datetime.strftime("%l:%M %p") %></td>
                                        <td><%=Time.at(obj["sunsetTime"]).to_datetime.strftime("%l:%M %p") %></td>
                                    </tr>
                                    <% if index == 8 %>
                                        <% break %>
                                    <% end %>
                                <% end %>
                            </tbody>
                        </table>
                    <% end %>
                <% end %>
                </div>
            </div>
        </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
